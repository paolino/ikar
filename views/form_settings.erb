
<div class="list-group">
  <div class="list-group-item">
     Settings
     <small><a href="/settings">refresh</a></small>
  </div>
  <div class="list-group-item">
    <form action="/settings" method="POST">
      <div class="form-group">
        <label for="wid_src">Pool Metadata Source</label>
        <input type="text" class="form-control" name="pool_strategy" id="pool_strategy"
            placeholder="" value="<%= pool_strategy %>">
        <small id="help" class="form-text text-muted">
          "direct", "none" or url to SMASH server.
          <br/>Use <a href="/stake-pools-maintenance">stake pool maintenance action</a> to enforce metadata GC.
          <br/>Use <a href="/smash-health-check">smash health check</a> to verify SMASH's health.
        </small>
      </div>

      <button type="submit" class="btn btn-success">Update</button>
    </form>
  </div>
  <% if update_settings %>
  <div class="list-group-item"  >
    <small id="settings">
        <%= generate_curl(update_settings, 'curl (update settings)') %>
    </small>
  </div>
  <% end %>
  <% if settings %>
  <div class="list-group-item"  >
    <small id="settings">
        <%= response2table(settings, 'curl (get settings)') %>
    </small>
  </div>
  <% end %>
</div>
